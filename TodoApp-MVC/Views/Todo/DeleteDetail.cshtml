@model TodoApp_MVC.ViewModels.Todo.DeleteTodoViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row todo-container todo-create-update-container shadow">
    <div class="col-md">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <form method="post" asp-action="Delete" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" hidden />
                <div class="form-group mb-2">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" disabled/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description" class="control-label"></label>
                    @* <input asp-for="Description" class="form-control" /> *@
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsComplete" disabled/> @Html.DisplayNameFor(model => model.IsComplete)
                    </label>
                </div>
            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>