@model IEnumerable<TodoApp_MVC.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    @if(Model.Count() > 0)
    {
        <div class="container">
            @foreach (var item in Model)
            {
                <p>@item.Title</p>
            }
        </div>
    }
    else{
        <p>No Todo List</p>   
    }
    <a asp-area="" asp-controller="Todo" asp-action="Create" class="btn btn-primary">Create</a>
</div>